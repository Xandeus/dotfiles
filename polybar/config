[module/change-wallpaper]
type = custom/script
exec = echo $(basename "$(cat ~/.fehbg)") | tr -d "'"
click-left = wal -a "85" -i $HOME/Dropbox/Photos/Wallpapers/ 

format-overline = ${colors.secondary}

[module/taskwarrior]
interval = 30
type = custom/script
